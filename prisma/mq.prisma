generator client {
  provider = "prisma-client-js"
  output   = "@mqdb"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MQ")
}

model UserQuiz {
  user_id                       String       @id
  artist_quiz_active Boolean      @default(false)
  active_artist_quiz_type       String[]
  artistQuizzes                 ArtistQuiz[] @relation("UserArtistQuiz")
}

model ArtistQuiz {
  id             String    @id
  question       String
  answers        String[]
  correct_answer String
  userQuiz       UserQuiz? @relation("UserArtistQuiz", fields: [userId], references: [user_id])
  userId         String?
}
